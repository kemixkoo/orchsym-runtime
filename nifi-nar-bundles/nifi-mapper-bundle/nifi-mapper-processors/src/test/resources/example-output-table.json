{
	"id": "xxx-001",
	"name": "output1",
	"desc": "mapping for the fullname",
	"type": "OUTPUT",
	"avro_schema": {
		"namespace": "example.output",
		"type": "record",
		"name": "output1",
		"fields": [
			{
				"name": "id",
				"type": "int"
			},
			{
				"name": "full_name",
				"type": "string"
			},
			{
				"name": "age",
				"type": "int"
			},
			{
				"name": "address",
				"type": [
					"string",
					"null"
				]
			}
		]
	},
	"controller": "AvroRecordSetWriter",
	"controller_desc": "Avro writer",
	"filter": "${full_name:startsWith('Hello')}",
	"filter_desc": "full name is start with hello",
	"expressions": [
		{
			"path": "/id",
			"exp": "${id}",
			"desc": "staff id"
		},
		{
			"path": "/full_name",
			"exp": "${input.main.first_name:append(' '):append(${input.main.last_name})}",
			"default": "<undefined>",
			"desc": "staff full name"
		},
		{
			"path": "/age",
			"exp": "${now():format('yyyy'):toNumber():minus(${input.main.birth:toDate('yyyy-MM-dd'):format('yyyy'):toNumber()})}",
			"desc": "staff age"
		}
	]
}
